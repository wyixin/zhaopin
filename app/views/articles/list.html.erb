<h1>就业培训管理</h1>
<div class="userInfoContent container">
  <div class="row">
    <div class="col-48 userInfoContent">
      <div class="row">
        <div class="new_btn">
          <%= link_to '新建', new_article_path %>
        </div>
        <table id="article_table">
          <thead>
              <tr>
                <th>标题</th>
                <th>分类</th>
                <th>发布时间</th>
                <th>来源</th>
                <th>阅读次数</th>
                <th>操作</th>
              </tr>
          </thead>

          <tbody>
          <% if @articles.present? %>
              <% @articles.each do |article| %>
                  <tr>
                    <td><%= article.title %></td>
                    <td><%= article.sub_category.name %></td>
                    <td><%= article.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                    <td><%= article.source %></td>
                    <td><%= article.click %></td>
                    <td>
                      <%= link_to '编辑', edit_article_path(article) %>
                      <%= link_to '删除', article, method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
              <% end %>
          <% else %>
            <tr>
              <td colspan="5">暂无数据.</td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>