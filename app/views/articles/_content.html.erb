<div class="content col-offset-1 col-37">
  <div class="row">
    <div class="col-48 contentHeader">
      <div class="row text-center">
        <% @sub_categories.each_with_index do |sub_category|%>
            <div class="col-6 item <% if params[:sub_category_id].to_i==sub_category.id %>active<% end %>">
              <%
                 style = "color:#333333;"
                 if params[:sub_category_id].to_i==sub_category.id
                   style = "color:#1866b8;"
                 end
              %>
              <%=link_to sub_category.name, articles_path(:sub_category_id=>sub_category.id), :style=>style %>
            </div>
        <% end %>
      </div>
    </div>
    <% if @articles.present?%>
        <% @articles.each do  |article|%>
            <div class="col-48 contentItem">
              <div class="row">
                <!--<div class="col-4"><img src="/static/src/images/head.jpg" alt="username"></div>-->
                <div class="col-44">
                  <div class="row">
                    <div class="col-48 title">
                      <%=link_to article.title, article_path(article), :style=>"color:#1866b8;"%>
                      <span class="time pull-right"><%= article.created_at.strftime("%Y-%m-%d %H:%M:%S")%> 阅读(<%= article.click %>)</span>
                    </div>
                    <div class="col-48 ins">
                      <%= article.text.html_safe %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
    <% else %>
        <div class="col-48 contentItem">
          <div class="row">
            <div class="col-44">
              <div class="row">
                暂无培训信息.
              </div>
            </div>
          </div>
        </div>
    <% end %>

  </div>
</div>