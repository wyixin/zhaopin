<%=render '/welcome/top_banner'%>
<div class="row">
    <div class="loginWrapper">
      <div class="loginBoxBackgroundColor"></div>
      <div class="loginContentBox">
        <div class="loginContent">
          <div class="row">

            <%= render '/welcome/welcome_left' %>

            <div class="col-22 col-offset-5 loginContentBody">
              <div class="row">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <%= devise_error_messages! %>
                    <div class="col-48 line">
                      <input id="user_email" type="email" name="user[email]" value="" autofocus="autofocus" placeholder="请输入邮箱" class="col-48">
                    </div>


                    <div class="col-48">
                      <button class="btn-block btn-primary">发送重置</button>
                    </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= render '/welcome/welcome_right' %>
</div>
<%= render '/welcome/bottom_banner' %>
<%= render '/layouts/footer_banner' %>