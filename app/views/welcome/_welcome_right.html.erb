<%jobs = Job.order('created_at desc').limit(5)%>
<% if jobs.present?%>
    <div class="right_job_info">
      <div>招聘热门职位信息</div>
      <ul>
        <% jobs.each do |job|%>
            <li>
              <span class="footer-big-font"><%=job.name %></span><br/>
                  <span class="footer-little-font">
                    经验<%=job.experience ? job.experience : 1 %>年/
                    <%=job.education %>/
                    <%=job.sub_position.name rescue '' %>
                  </span>
            </li>
        <% end %>
      </ul>
    </div>
<% end %>
