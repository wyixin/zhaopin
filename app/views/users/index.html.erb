<div class="userInfoContent container">
  <div class="row">
    <div class="col-48 userInfoContent">
      <div class="row">
        <div class="new_btn">
          <%= link_to '新建客服', new_user_path %>
        </div>
        <table id="user_table">
          <thead>
          <tr>
            <th>邮箱</th>
            <th>注册时间</th>
            <th>最后登录时间</th>
            <th>角色</th>
          </tr>
          </thead>

          <tbody>
          <% if @users.present? %>
              <% @users.each do |user| %>
                  <tr>
                    <td><%= user.email %></td>
                    <td><%= user.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                    <td><%= user.last_sign_in_at.strftime("%Y-%m-%d %H:%M:%S") rescue '' %></td>
                    <td><%= user.role.text %></td>
                  </tr>
              <% end %>
          <% else %>
            <tr>
              <td colspan="5">暂无数据.</td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <%= paginate @users %>
    </div>
  </div>
</div>
