<div class="row">
    <%= form_for @resume_education,:url => create_education_resumes_path(:id=>@resume_education.id), :html=>{:method=>'post'} do |f| %>
      <input type="hidden" name="o" value="3"/>
      <% if @resume_education.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@resume_education.errors.count, "error") %> prohibited this resume_education from being saved:</h2>

          <ul>
          <% @resume_education.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">学校名称</label>
            <span class="light">*</span>
          </div>
          <div class="col-44">
            <input id="resume_education_school" type="text" name="resume_education[school]" value="<%=@resume_education.school %>">
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">专业名称</label>
            <span class="light">*</span>
          </div>
          <div class="col-44">
            <input id="resume_education_speciality" type="text" name="resume_education[speciality]" value="<%=@resume_education.speciality %>">
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">学历</label>
            <span class="light">*</span>
          </div>
          <div class="col-44">
            <input id="resume_education_education" type="text" name="resume_education[education]" value="<%=@resume_education.education %>">
          </div>
        </div>
      </div>
      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">起止日期</label>
            <span class="light">*</span>
          </div>
          <div class="col-44">
            <div class="row">
              <select name="resume_education[start_time(1i)]" id="resume_education_start_time_1i">
                <% (2010..2015).each do |y|%>
                    <option value="<%=y%>" <%if year(@resume_education.start_time)==y%>selected<%end%>><%=y%></option>
                <% end %>
              </select>
              <select name="resume_education[start_time(2i)]" id="resume_education_start_time_2i">
                <% (1..12).each do |m|%>
                    <option value="<%=m %>" <%if month(@resume_education.start_time)==m%>selected<%end%>><%=m %></option>
                <% end %>
              </select>
              <select name="resume_education[start_time(3i)]" id="resume_education_start_time_3i">
                <% (1..31).each do |d|%>
                    <option value="<%=d %>" <%if day(@resume_education.start_time)==d%>selected<%end%>><%=d %></option>
                <% end %>
              </select>

            </div>

            <div class="row">
              <select name="resume_education[end_time(1i)]" id="resume_education_end_time_1i">
                <% (2010..2015).each do |y|%>
                    <option value="<%=y%>" <%if year(@resume_education.end_time)==y%>selected<%end%>><%=y%></option>
                <% end %>
              </select>
              <select name="resume_education[end_time(2i)]" id="resume_education_end_time_2i">
                <% (1..12).each do |m|%>
                    <option value="<%=m %>" <%if month(@resume_education.end_time)==m%>selected<%end%>><%=m %></option>
                <% end %>
              </select>
              <select name="resume_education[end_time(3i)]" id="resume_education_end_time_3i">
                <% (1..31).each do |d|%>
                    <option value="<%=d %>" <%if day(@resume_education.end_time)==d%>selected<%end%>><%=d %></option>
                <% end %>
              </select>

            </div>
          </div>
        </div>
      </div>


      <div class="col-48 line">
        <div class="row">
          <div class="col-4"></div>
          <div class="col-44">
            <button class="btn-primary" type="submit" >保存</button>
            <button class="btn-default" type="button">取消</button>
          </div>
        </div>
      </div>
    <% end %>
</div>