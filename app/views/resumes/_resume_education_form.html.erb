<div class="row">
    <%= form_for @resume_education,:url => create_education_resumes_path(:id=>@resume_education.id), :html=>{:method=>'post'} do |f| %>
      <input type="hidden" name="o" value="3"/>
      <% if @resume_education.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@resume_education.errors.count, "error") %> prohibited this resume_education from being saved:</h2>

          <ul>
          <% @resume_education.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">学校名称</label>
            <span class="light">*</span>
          </div>
          <div class="col-44">
            <input id="resume_education_school" type="text" name="resume_education[school]" value="<%=@resume_education.school %>">
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">专业名称</label>
            <span class="light">*</span>
          </div>
          <div class="col-44">
            <input id="resume_education_speciality" type="text" name="resume_education[speciality]" value="<%=@resume_education.speciality %>">
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">学历</label>
            <span class="light">*</span>
          </div>
          <div class="col-44">
            <select name="resume_education[education]" id="resume_education_education">
              <% ResumeEducation.education.options.each do |education|%>
                  <option value="<%=education.last %>" <%if @resume_education.education==education.last%>selected<%end%>>
                    <%=education.first %>
                  </option>
              <% end %>
            </select>
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">起止日期</label>
            <span class="light">*</span>
          </div>
          <div class="col-44">
            <div class="row">
              <select name="resume_education[start_time(1i)]" id="resume_education_start_time_1i">
                <% (2010..2015).each do |y|%>
                    <option value="<%=y%>" <%if year(@resume_education.start_time)==y%>selected<%end%>><%=y%></option>
                <% end %>
              </select>
              <select name="resume_education[start_time(2i)]" id="resume_education_start_time_2i">
                <% (1..12).each do |m|%>
                    <option value="<%=m %>" <%if month(@resume_education.start_time)==m%>selected<%end%>><%=m %></option>
                <% end %>
              </select>
              <select name="resume_education[start_time(3i)]" id="resume_education_start_time_3i">
                <% (1..31).each do |d|%>
                    <option value="<%=d %>" <%if day(@resume_education.start_time)==d%>selected<%end%>><%=d %></option>
                <% end %>
              </select>

            </div>

            <div class="row">
              <select name="resume_education[end_time(1i)]" id="resume_education_end_time_1i">
                <% (2010..2015).each do |y|%>
                    <option value="<%=y%>" <%if year(@resume_education.end_time)==y%>selected<%end%>><%=y%></option>
                <% end %>
              </select>
              <select name="resume_education[end_time(2i)]" id="resume_education_end_time_2i">
                <% (1..12).each do |m|%>
                    <option value="<%=m %>" <%if month(@resume_education.end_time)==m%>selected<%end%>><%=m %></option>
                <% end %>
              </select>
              <select name="resume_education[end_time(3i)]" id="resume_education_end_time_3i">
                <% (1..31).each do |d|%>
                    <option value="<%=d %>" <%if day(@resume_education.end_time)==d%>selected<%end%>><%=d %></option>
                <% end %>
              </select>

            </div>
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">所获奖励</label>
          </div>
          <div class="col-44">
            <input id="resume_education_reward" type="text" name="resume_education[reward]" value="<%=@resume_education.reward %>"/>
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">在校经历</label>
          </div>
          <div class="col-44">
            <input id="resume_education_school_experience" type="text" name="resume_education[school_experience]" value="<%=@resume_education.school_experience %>"/>
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">计算机能力</label>
          </div>
          <div class="col-44">
            <input id="resume_education_computer_ability" type="text" name="resume_education[computer_ability]" value="<%=@resume_education.computer_ability %>"/>
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">语言能力</label>
          </div>
          <div class="col-44">
            第一外语<input id="resume_education_foreign_language1" type="text" name="resume_education[foreign_language1]" value="<%=@resume_education.foreign_language1 %>" style="width: 100px;"/>
            (听说能力<input id="resume_education_foreign_language1_ls" type="text" name="resume_education[foreign_language1_ls]" value="<%=@resume_education.foreign_language1_ls %>" style="width: 50px;"/>
            读写能力<input id="resume_education_foreign_language1_rw" type="text" name="resume_education[foreign_language1_rw]" value="<%=@resume_education.foreign_language1_rw %>" style="width: 50px;"/>)
            <br/>
            第二外语<input id="resume_education_foreign_language2" type="text" name="resume_education[foreign_language2]" value="<%=@resume_education.foreign_language2 %>" style="width: 100px;"/>
            (听说能力<input id="resume_education_foreign_language2_ls" type="text" name="resume_education[foreign_language2_ls]" value="<%=@resume_education.foreign_language2_ls %>" style="width: 50px;"/>
            读写能力<input id="resume_education_foreign_language2_rw" type="text" name="resume_education[foreign_language2_rw]" value="<%=@resume_education.foreign_language2_rw %>" style="width: 50px;"/>)
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">普通话</label>
          </div>
          <div class="col-44">
            <input id="resume_education_mandarin" type="text" name="resume_education[mandarin]" value="<%=@resume_education.mandarin %>"/>
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4">
            <label for="">其它技能</label>
          </div>
          <div class="col-44">
            <input id="resume_education_other_skills" type="text" name="resume_education[other_skills]" value="<%=@resume_education.other_skills %>"/>
          </div>
        </div>
      </div>

      <div class="col-48 line">
        <div class="row">
          <div class="col-4"></div>
          <div class="col-44">
            <button class="btn-primary" type="submit" >保存</button>
          </div>
        </div>
      </div>
    <% end %>
</div>
