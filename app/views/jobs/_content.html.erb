<div class="content col-offset-1 col-33">
  <div class="row">
    <div class="col-48 contentHeader">
      <div class="row text-center">
        <%
           style = "color:#333333;"
           if params[:action]=='index'
             style = "color:#1866b8;"
           end
           nstyle = "color:#333333;"
           if params[:action]=='new_job'
             nstyle = "color:#1866b8;"
           end
        %>
        <div class="col-6 item <%if params[:action]=='index'%>active<% end %>">
          <%=link_to '热门职位', jobs_path, :style=>style%>
        </div>
        <div class="col-6 item <%if params[:action]=='new_job'%>active<% end %>">
          <%=link_to '最新职位', new_job_jobs_path, :style=>nstyle %>
        </div>
      </div>
    </div>
    <% if @jobs.present?%>
        <% @jobs.each do  |job|%>
            <div class="col-48 contentItem">
              <div class="row">
                <!--<div class="col-4"><img src="/static/src/images/head.jpg" alt="username"></div>-->
                <div class="col-44">
                  <div class="row">
                    <div class="col-48 title">
                      <%=link_to job.name, job_path(job), :style=>"color:#1866b8;"%>
                      <span class="time pull-right"><%=job.created_at.strftime("%Y-%m-%d %H:%M:%S")%> 发布</span>
                    </div>
                    <div class="col-48 ins">
                      经验<%= job.experience %>年/
                      <%= job.education %>/
                      <%= job.sub_position.name rescue '' %>
                      <span class="salary pull-right">￥<%= job.wage %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
    <% else %>
        <div class="col-48 contentItem">
          <div class="row">
            <div class="col-44">
              <div class="row">
                暂无职位信息.
              </div>
            </div>
          </div>
        </div>
    <% end %>

  </div>
</div>
